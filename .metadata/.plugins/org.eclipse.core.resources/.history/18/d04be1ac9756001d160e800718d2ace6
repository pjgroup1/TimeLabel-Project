package com.java.team.mapper;

import java.util.List;
import java.util.Optional;

import org.apache.ibatis.annotations.Mapper;
import org.apache.ibatis.annotations.Param;

import com.java.team.dto.Product;
import com.java.team.dto.ProductSearchCond;
/**
 * 마이바티스 매핑 XML 을 호출해주는 매퍼 인터페이스입니다.
 * 이 인터페이스는 @Mapper 어노테이션을 붙여주저야 합니다. 그래야 Mybatis가 인식합니다.
 * 이 인터페이스의 메서드를 호출하면 다음에 보이는 xml의 해당 SQL을 실행하고 결과를 돌려줍니다.
 * 구현체는 자동으로 만들어 져서 인터페이스만 구현하면 된다.
 * 
 * 스프링 빈도 등록해줌
 */
@Mapper
public interface ProductMapper {
	
	// 저장
	void save(Product product);
	
	// 업데이트
	// void update(@Param("index") Long index, @Param("updateParam") ProductUpdateDto updateParam);
	
	// 한개 조회
	Optional<Product> finByIndex(Long index);
	
	// 목록 리스트
	List<Product> findAll(ProductSearchCond cond);

	// 삭제
	void deleteProduct(@Param("index") Long index);
}
