		<result property="orderCount" column="order_count" />
	</resultMap>


	<!-- 상품 등록 -->
	<insert id="save" useGeneratedKeys="true" keyProperty="index">
		insert into product (PRODUCT_NAME, PRODUCT_PRICE, PRODUCT_INFO,
		PRODUCT_REP_IMAGE, PRODUCT_DETAIL_IMAGE1, PRODUCT_DETAIL_IMAGE2,
		PRODUCT_DETAIL_IMAGE3, PRODUCT_QUANTITY) values
		(#{itemName},#{price},#{info},#{mainImage},#{image1},#{image2},#{image3},#{quantity})
	</insert>

